<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="20dp"
    tools:context=".ForgetPassword.ForgetPassword_OTP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/back_press_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_back"
            android:backgroundTint="@color/black"
            android:transitionName="back_press_trasnition" />

        <TextView
            android:id="@+id/create_account_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cyberjunkies_font"
            android:letterSpacing="0.35"
            android:padding="5dp"
            android:text="CO\nDE"
            android:textColor="@color/teal_700"
            android:textSize="85sp"
            android:textStyle="bold"
            android:transitionName="create_account_trasnition" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Verification"
            android:textAllCaps="true"
            android:textColor="@color/background_dark"
            android:textSize="40sp"
            android:textStyle="italic" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Enter OTP sented on \n03001234567"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/teal_200"
            android:textSize="30sp" />

        <com.chaos.view.PinView
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:cursorVisible="true"
            android:inputType="number"
            android:itemBackground="@color/black"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            app:cursorColor="@color/white"
            app:itemCount="6"
            app:itemHeight="45dp"
            app:itemRadius="5dp"
            app:itemWidth="45dp"
            app:lineColor="@color/teal_700"
            app:lineWidth="3dp" />

        <Button
            android:id="@+id/verify_btn"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/teal_700"
            android:fontFamily="@font/cyberjunkies_font"
            android:letterSpacing="0.1"
            android:padding="10dp"
            android:text="Verify now"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:transitionName="next_btn_trasnition" />

    </LinearLayout>
</ScrollView>